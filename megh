<body>

  <div class="card">
    <h1>Hey ‚ù§Ô∏è</h1>
    <p>You are my favorite person in the universe.</p>
    <button onclick="showLove()">Click for a surprise üå∏</button>
    <p id="message"></p>
  </div>

  <script>
    const messages = [
      "You looked so pretty today (you always do!) üíñ",
      "That blue eyeshadow was megh-nificent! ‚òÅÔ∏èüíô",
      "I'm green with envy that I'm not with you right now üíö",
      "Your yellow look made the whole day brighter ‚òÄÔ∏èüíõ",
      "The kameez was beautiful, but you made it look better ü•∞",
      "Everything is 'mint' to be when I'm with you üåø",
      "Sorry I didn't say it enough today, you're breathtaking üíï",
      "Blue, green, or yellow‚Äîevery color looks best on you! üåà"
    ];

    function showLove() {
      const msgElement = document.getElementById("message");
      const randomMsg = messages[Math.floor(Math.random() * messages.length)];
      
      // Add a little fade effect when text changes
      msgElement.style.opacity = 0;
      setTimeout(() => {
        msgElement.innerText = randomMsg;
        msgElement.style.opacity = 1;
      }, 200);
    }

    // Floating heart generator
    setInterval(() => {
      const heart = document.createElement("div");
      heart.className = "heart";
      
      // Randomly choose between hearts and sparkles
      const icons = ["‚ù§Ô∏è", "üíñ", "üå∏", "‚ú®", "üíõ", "üíô", "üíö"];
      heart.innerText = icons[Math.floor(Math.random() * icons.length)];
      
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.bottom = "-50px";
      heart.style.fontSize = (Math.random() * 20 + 15) + "px";
      document.body.appendChild(heart);

      setTimeout(() => heart.remove(), 4000);
    }, 400);
  </script>

